@model MVCShop.Models.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Edit Product</h2>

    <form asp-area="Admin"
          asp-controller="AdminProducts"
          asp-action="Edit"
          asp-route-slug="@Model.Slug"
          method="post"
          enctype="multipart/form-data">


        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="Slug" />

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Change Image</label>
            <input asp-for="ImageUpload" class="form-control" type="file" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ImageFileName))
        {
            <img src="~/images/@Model.ImageFileName" width="150" class="img-thumbnail mb-3" />
        }

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select"
                    asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))">
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="btn btn-secondary">
            Cancel
        </a>


    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
