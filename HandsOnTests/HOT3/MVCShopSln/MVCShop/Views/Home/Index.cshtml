@model List<MVCShop.Models.Product>

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <h2>Products</h2>

    <form asp-action="Index" method="get" class="mb-3">
        <select name="categoryId" class="form-select" style="max-width: 300px;">
            <option value="">All Categories</option>
            @foreach (var cat in ViewBag.Categories)
            {
                <option value="@cat.CategoryId">@cat.Name</option>
            }
        </select>
        <button type="submit" class="btn btn-secondary mt-2">Filter</button>
    </form>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="~/images/@product.ImageFileName" class="card-img-top">

                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p>@product.Price.ToString("c")</p>

                        <a asp-controller="Products" asp-action="Details" asp-route-slug="@product.Slug" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
