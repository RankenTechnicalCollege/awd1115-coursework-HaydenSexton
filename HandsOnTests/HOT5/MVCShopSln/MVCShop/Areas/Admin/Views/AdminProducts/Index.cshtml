@model List<MVCShop.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Products (Admin)</h2>

    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }

    <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Create" class="btn btn-primary mb-3">Add New Product</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Slug</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Category?.Name</td>
                    <td>@p.Price.ToString("c")</td>
                    <td>@p.Slug</td>

                    <td>
                        <a asp-area="Admin"
                           asp-controller="AdminProducts"
                           asp-action="Edit"
                           asp-route-slug="@p.Slug"
                           class="btn btn-warning btn-sm">
                            Edit
                        </a>


                        <a asp-area="Admin"
                           asp-controller="AdminProducts"
                           asp-action="Delete"
                           asp-route-slug="@p.Slug"
                           class="btn btn-danger btn-sm">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>