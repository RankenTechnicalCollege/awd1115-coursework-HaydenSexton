@model OrderForm.Models.OrderFormModel
@{
    ViewData["Title"] = "T-Shirt Order Form";
}

<div class="container">
    <h1 class="text-primary mb-4 text-center">Order Form</h1>

    <form asp-action="Index" method="post" class="mx-auto" style="max-width: 500px;">
        <div asp-validation-summary="All" class="text-danger mb-3 text-center"></div>

        <div class="form-floating mb-3">
            <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
            <label asp-for="Quantity">Quantity</label>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="DiscountCode" class="form-control" placeholder="Discount Code" />
            <label asp-for="DiscountCode">Discount Code (optional)</label>
        </div>

            <div class="text-danger text-center mb-3">@ViewBag.DiscountError</div>

        <div class="mb-3 text-center">
            <button type="submit" class="btn btn-success btn-lg w-100">Place Order</button>
        </div>
    </form>

        <div class="card shadow-sm mx-auto mt-4" style="max-width: 500px;">
            <div class="card-body">
                <h5 class="card-title text-center">Order Summary</h5>
                <p class="card-text text-center">
                    @ViewBag.Quantity T-Shirts at $15.00 each
                </p>
                <hr />
                <div class="d-flex justify-content-between">
                    <span>Subtotal:</span>
                    <strong>@ViewBag.Subtotal.ToString("C")</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Tax (8%):</span>
                    <strong>@ViewBag.Tax.ToString("C")</strong>
                </div>
                <hr />
                <div class="d-flex justify-content-between">
                    <span>Total:</span>
                    <strong>@ViewBag.Total.ToString("C")</strong>
                </div>
            </div>
        </div>
</div>