@model HOT4.Models.Appointment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Appointment Details";
}

<div class="container py-4">
    <h2 class="text-center mb-4">Appointment Details</h2>

    <dl class="row">
        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Customer?.Username</dd>

        <dt class="col-sm-3">Start Date/Time</dt>
        <dd class="col-sm-9">@Model.StartDateTime.ToString("MM/dd/yyyy hh:mm tt")</dd>

        <dt class="col-sm-3">End Date/Time</dt>
        <dd class="col-sm-9">@Model.EndDateTime.ToString("MM/dd/yyyy hh:mm tt")</dd>
    </dl>

    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
