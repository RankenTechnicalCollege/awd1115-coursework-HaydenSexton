@model HOT4.Models.Appointment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Appointment";
}

<div class="container py-4">
    <h2 class="text-center mb-4 text-danger">Delete Appointment</h2>

    <p class="lead text-center">Are you sure you want to delete this appointment?</p>

    <dl class="row">
        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Customer?.Username</dd>

        <dt class="col-sm-3">Start</dt>
        <dd class="col-sm-9">@Model.StartDateTime.ToString("MM/dd/yyyy hh:mm tt")</dd>

        <dt class="col-sm-3">End</dt>
        <dd class="col-sm-9">@Model.EndDateTime.ToString("MM/dd/yyyy hh:mm tt")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AppointmentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
