@model HOT4.Models.Appointment
@{
    ViewData["Title"] = "Create Appointment";
}

<div class="container py-4 bg-light rounded">
    <h2 class="mb-4 text-center">Create Appointment</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="StartDateTime" class="form-label"></label>
            <input asp-for="StartDateTime" type="datetime-local" class="form-control" />
            <span asp-validation-for="StartDateTime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CustomerId" class="form-label">Customer</label>
            <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-select">
                <option value="">-- Select a Customer --</option>
            </select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Create Appointment</button>
    </form>
</div>