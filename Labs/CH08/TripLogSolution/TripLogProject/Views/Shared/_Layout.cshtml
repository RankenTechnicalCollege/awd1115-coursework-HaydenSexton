<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Trip Log</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TripLogProject.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-4">
        <header>
            <h1>My Trip Log</h1>
            @if (ViewBag.SubHeader != null)
            {
                <h2>@ViewBag.SubHeader</h2>
            }
        </header>

        <main>
            @RenderBody()
        </main>

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.SuccessMessage</div>
        }
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
