@model AddTripViewModelPage2

<form asp-action="AddPage2" method="post">
    <div class="form-group">
        <label asp-for="Accommodations">Accommodations</label>
        <input asp-for="Accommodations" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone Number</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email Address</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Next</button>
        <a asp-action="Cancel" class="btn btn-secondary">Cancel</a>
    </div>
</form>