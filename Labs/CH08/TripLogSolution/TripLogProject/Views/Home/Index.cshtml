@using TripLogProject.Models.DomainModels
@model List<Trip>

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Recent Trips</h3>
    <a asp-controller="Trip" asp-action="AddPage1" class="btn btn-primary">Add Trip</a>
</div>

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Destination</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Accommodations</th>
                <th>Things To Do</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trip in Model)
            {
                <tr>
                    <td>@trip.Destination</td>
                    <td>@trip.StartDate.ToString("M/d/yyyy")</td>
                    <td>@trip.EndDate.ToString("M/d/yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(trip.Accommodations))
                        {
                            <div>@trip.Accommodations</div>
                            @if (!string.IsNullOrEmpty(trip.Phone))
                            {
                                <div>Phone: @trip.Phone</div>
                            }
                            @if (!string.IsNullOrEmpty(trip.Email))
                            {
                                <div>Email: @trip.Email</div>
                            }
                        }
                    </td>
                    <td>@trip.ThingsToDo</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No trips found. <a asp-controller="Trip" asp-action="AddPage1">Add your first trip!</a></p>
}
