@model List<Contact>
@{
    ViewData["Title"] = "Contact Manager";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Contact Manager</h1>

    <div class="mb-3 text-end">
        <a asp-controller="Contact" asp-action="Add" class="btn btn-success shadow-sm">
            <i class="bi bi-person-plus"></i> Add Contact
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Category</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Firstname</td>
                    <td>@contact.Lastname</td>
                    <td>@contact.Phone</td>
                    <td>@contact.Email</td>
                    <td>@contact.Category.Name</td>
                    <td class="text-center">
                        <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug"
                           class="btn btn-sm btn-primary me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug"
                           class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

