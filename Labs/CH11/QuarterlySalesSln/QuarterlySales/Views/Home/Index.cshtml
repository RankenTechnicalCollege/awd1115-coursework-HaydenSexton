@model IEnumerable<QuarterlySales.Models.Sale>
@{
    ViewData["Title"] = "Quarterly Sales";
}
<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Quarterly Sales</h2>
        <div class="btn-group">
            <a asp-controller="Employees" asp-action="Create" class="btn btn-outline-primary">+ New Employee</a>
            <a asp-controller="Sales" asp-action="Create" class="btn btn-primary">+ New Sale</a>
        </div>
    </div>

    <form method="get" class="mb-3">
        <div class="row g-2">
            <div class="col-auto">
                <select name="employeeId" asp-items="ViewBag.EmployeeList" class="form-select" onchange="this.form.submit()">
                    <option value="">All Employees</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-secondary">Filter</button>
            </div>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No sales yet. Try <a asp-controller="Sales" asp-action="Create" class="alert-link">adding a sale</a>.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Employee</th>
                    <th>Quarter</th>
                    <th>Year</th>
                    <th class="text-end">Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Employee.FullName</td>
                        <td>@s.Quarter</td>
                        <td>@s.Year</td>
                        <td class="text-end">@s.Amount.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
