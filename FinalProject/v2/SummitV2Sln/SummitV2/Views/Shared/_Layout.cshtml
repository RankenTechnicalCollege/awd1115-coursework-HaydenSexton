@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
    var isClanIndex = currentController == "Clan" && currentAction == "Index";
    var isMyClan = currentController == "Clan" && currentAction == "Details";

    var joinedClanId = Context.Session.GetString("JoinedClanId");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Summit</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!--original imports-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SummitV2.styles.css" asp-append-version="true" />

    @RenderSection("HeadContent", required: false)

    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>

</head>
<body class="bg-dark text-light">

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-black border-bottom border-info shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-info fw-bold text-uppercase" asp-area="" asp-controller="Home" asp-action="Index" style="letter-spacing:2px;">Summit</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(isClanIndex ? "active" : "")"
                               asp-area=""
                               asp-controller="Clan"
                               asp-action="Index">
                                <i class="fas fa-users me-1"></i>Clans
                            </a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Event" ? "active" : "")"
                                   asp-area=""
                                   asp-controller="Event"
                                   asp-action="Index">
                                    <i class="fas fa-calendar-alt me-1"></i>Manage Events
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentArea == "Admin" && currentController == "User" ? "active" : "")"
                                   asp-area="Admin"
                                   asp-controller="User"
                                   asp-action="Index">
                                    <i class="fas fa-user-cog me-1"></i>Manage Users
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("ClanOwner"))
                        {
                            <li class="nav-item">
                                <form asp-controller="Clan"
                                      asp-action="MyClan"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="btn btn-link nav-link @(isMyClan ? "active" : "")">
                                        <i class="fas fa-shield-alt me-1"></i>My Clan
                                    </button>
                                </form>
                            </li>
                        }

                    </ul>

                     @if (!string.IsNullOrEmpty(joinedClanId))
                     {
                         <span class="navbar-text text-info">
                             Welcome Clan Owner!
                         </span>
                     }

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top border-info footer text-muted bg-black text-center py-3 mt-4">
        <div class="container text-light">
            &copy; 2025 - Summit - <a asp-controller="Home" asp-action="Credits" class="text-info">Credits</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
