@model PaginatedList<Clan>

@{
    ViewBag.Title = "Clan List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="py-4 bg-dark text-light min-vh-100">

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }


    <h1 class="mb-4 text-center fw-bold text-info text-uppercase" style="letter-spacing:3px;">
        Destiny 2 Clans
    </h1>

    <li class="nav-item d-flex align-items-center ms-3">
        <form asp-area="Clan" asp-controller="Clan" asp-action="Index" method="get" class="d-flex">
            <input type="text"
                   name="searchString"
                   class="form-control bg-black text-light border-info rounded-start-pill shadow-sm"
                   placeholder="Search Clans..."
                   style="max-width: 220px;" />

            <button type="submit"
                    class="btn btn-outline-info rounded-end-pill ms-1 px-3 shadow-sm">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </li>

    <div class="d-flex justify-content-end mb-3 mt-3">
        <a asp-area="Clan" asp-controller="Clan" asp-action="Create"
           class="btn btn-info text-dark fw-bold shadow-sm px-4">
            <i class="bi bi-plus-circle me-1"></i> Add New Clan
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info bg-secondary border-0 text-light text-center shadow-sm">
            No clans found.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var clan in Model)
            {
                <div class="col">
                    <div class="card h-100 bg-secondary text-light border-info border-opacity-50 shadow-lg">
                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title fw-bold text-info">
                                @clan.Name
                            </h5>

                            <p class="card-text flex-grow-1">
                                @clan.Description
                            </p>

                            <div class="mt-3 d-flex justify-content-between align-items-center">

                                <small class="text-light-50"
                                       title="@clan.CreatedDate.ToString("yyyy-MM-dd HH:mm")">
                                    Created: @clan.CreatedDate.ToString("yyyy-MM-dd")
                                </small>

                                @{
                                    // later on validate that user is allowed to delete or edit
                                }

                                <div class="btn-group d-flex gap-2" role="group">

                                    <a asp-action="Details" asp-route-id="@clan.ClanId"
                                       class="btn btn-sm btn-outline-info shadow-sm">
                                        View
                                    </a>

                                    @*later make it so admin can only see edit and delete*@

                                    <a asp-action="Edit" asp-route-id="@clan.ClanId"
                                       class="btn btn-sm btn-warning shadow-sm">
                                        Edit
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@clan.ClanId"
                                       class="btn btn-sm btn-danger shadow-sm">
                                        Delete
                                    </a>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }

            @if (!Model.Any())
            {
                <p>No Clans Found</p>
            }
        </div>
    }

    @{
        // page controls
    }

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <div class="d-flex justify-content-center" style="padding-top: 5em;">
        <a asp-area="Clan"
           asp-controller="Clan"
           asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn btn-outline-light @prevDisabled">
            Previous
        </a>

        <div class="btn text-light" style="cursor: default;">
            Page @Model.PageIndex of @Model.TotalPages
        </div>

        <a asp-area="Clan"
           asp-controller="Clan"
           asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn btn-outline-light @nextDisabled">
            Next
        </a>
    </div>


</div>
