@model PaginatedList<Event>

@{
    ViewData["Title"] = "All Events (Admin)";
}

<div class="container mt-4 text-light">

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }


    <h2 class="mb-4 fw-bold text-info text-uppercase" style="letter-spacing:2px;">Events</h2>

    <div class="card bg-black border-info shadow-lg">
        <div class="card-body">

            @if (!Model.Any())
            {
                <p class="text-light-50">There are no events to display.</p>
            }
            else
            {
                <table class="table table-dark table-hover border-info shadow-sm">
                    <thead class="bg-info text-dark fw-bold">
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Clan</th>
                            <th>Organizer</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ev in Model.OrderBy(e => e.EventDate))
                        {
                            <tr>
                                <td class="text-info fw-bold">@ev.Title</td>

                                <td>@ev.EventDate.ToString("MMM dd, yyyy")</td>

                                <td class="text-light">@ev.Clan?.Name</td>

                                <td class="text-light">@ev.ApplicationUser?.UserName</td>

                                <td class="text-end">
                                    <div class="btn-group">

                                        <a asp-action="Details"
                                           asp-route-id="@ev.EventId"
                                           class="btn btn-sm btn-outline-info shadow-sm">
                                            View
                                        </a>

                                        <a asp-action="AddEdit"
                                           asp-route-id="@ev.EventId"
                                           class="btn btn-sm btn-warning ms-2 shadow-sm">
                                            Edit
                                        </a>

                                        <button class="btn btn-sm btn-danger ms-2 shadow-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteEventModal-@ev.EventId">
                                            Delete
                                        </button>

                                    </div>
                                </td>
                            </tr>

                            <div class="modal fade" id="deleteEventModal-@ev.EventId" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content bg-dark text-light border-danger">

                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title">Confirm Delete</h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>

                                        <div class="modal-body">
                                            <p>Are you sure you want to delete this event?</p>
                                            <h5 class="fw-bold text-danger">@ev.Title</h5>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button"
                                                    class="btn btn-secondary"
                                                    data-bs-dismiss="modal">
                                                Cancel
                                            </button>

                                            <form asp-controller="Event"
                                                  asp-action="Delete"
                                                  method="post">

                                                <input type="hidden" name="id" value="@ev.EventId" />
                                                <button type="submit" class="btn btn-danger">
                                                    Yes, Delete
                                                </button>
                                            </form>

                                        </div>

                                    </div>
                                </div>
                            </div>

                        }
                    </tbody>
                </table>
            }

        </div>
    </div>

    <a asp-controller="Home"
       asp-action="Index"
       class="btn btn-outline-light mt-3 shadow-sm">
        Back to Home
    </a>

    @{
        // page controls
    }

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <div class="d-flex justify-content-center" style="padding-top: 5em;">
        <a asp-area="Event"
           asp-controller="Event"
           asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="btn btn-outline-light @prevDisabled">
            Previous
        </a>

        <div class="btn text-light" style="cursor: default;">
            Page @Model.PageIndex of @Model.TotalPages
        </div>

        <a asp-area="Event"
           asp-controller="Event"
           asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="btn btn-outline-light @nextDisabled">
            Next
        </a>
    </div>

</div>
