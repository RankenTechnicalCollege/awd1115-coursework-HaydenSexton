@model Event
@{
    bool isEdit = !string.IsNullOrEmpty(Model.EventId);
    ViewData["Title"] = isEdit ? "Edit Event" : "Create Event";
    var clan = ViewBag.Clan as Clan;
}

<div class="container mt-4 text-light">
    <h2 class="mb-4 fw-bold text-info text-uppercase">@ViewData["Title"]</h2>

    <div class="alert alert-dark border-info text-info shadow-sm mb-4 bg-black">
        <strong>Clan:</strong> <span class="text-light">@clan?.Name</span>
        <span class="text-muted">(@clan?.Description)</span>
    </div>

    <form asp-controller="Event" asp-action="AddEdit" asp-route-clanId="@Model.ClanId" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="EventId" />
        <input type="hidden" asp-for="ClanId" />
        <input type="hidden" asp-for="OrganizerId" />

        <div class="card bg-secondary border-info shadow-lg">
            <div class="card-body">

                <div class="mb-3">
                    <label asp-for="Title" class="form-label text-info fw-bold"></label>
                    <input asp-for="Title" class="form-control bg-dark text-light border-info shadow-sm" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label text-info fw-bold"></label>
                    <textarea asp-for="Description" rows="4" class="form-control bg-dark text-light border-info shadow-sm" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EventDate" class="form-label text-info fw-bold"></label>
                    <input asp-for="EventDate" type="datetime-local"
                           class="form-control bg-dark text-light border-info shadow-sm"
                           value="@(Model.EventDate != default ? Model.EventDate.ToString("yyyy-MM-ddTHH:mm") : "")" required />
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-info text-dark fw-bold shadow-sm">
                    @(isEdit ? "Save Changes" : "Create Event")
                </button>

                <a asp-controller="Clan" asp-action="Details" asp-route-id="@Model.ClanId"
                   class="btn btn-outline-light ms-2 shadow-sm">Cancel</a>

            </div>
        </div>
    </form>
</div>
