@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-4 text-light">

    <h2 class="mb-4 fw-bold text-info">Log In</h2>

    <div class="row">
        <div class="col-md-5">

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="card shadow-lg bg-black border-secondary">
                    <div class="card-body">

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-bold text-info"></label>
                            <input asp-for="Input.Email"
                                   class="form-control bg-dark text-light border-secondary"
                                   autocomplete="username"
                                   aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-bold text-info"></label>
                            <input asp-for="Input.Password"
                                   class="form-control bg-dark text-light border-secondary"
                                   autocomplete="current-password"
                                   aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label text-light fw-bold"></label>
                        </div>

                        <button id="login-submit"
                                type="submit"
                                class="btn btn-info fw-bold w-100">
                            Log In
                        </button>

                        <div class="mt-3">
                            <p><a id="forgot-password" asp-page="./ForgotPassword" class="text-info">Forgot your password?</a></p>
                            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-info">Register as a new user</a></p>
                            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-info">Resend email confirmation</a></p>
                        </div>

                    </div>
                </div>

            </form>
        </div>
        <div class="col-md-6 offset-md-1 text-light">

            <h3 class="fw-bold text-info">Use another service</h3>
            <hr class="border-secondary" />

            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <p>
                    No external authentication services are configured.
                    See <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="text-info">this article</a>.
                </p>
            }
            else
            {
                <form id="external-account"
                      asp-page="./ExternalLogin"
                      asp-route-returnUrl="@Model.ReturnUrl"
                      method="post">

                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit"
                                class="btn btn-outline-info fw-bold me-2 mb-2"
                                name="provider"
                                value="@provider.Name">
                            @provider.DisplayName
                        </button>
                    }
                </form>
            }
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
