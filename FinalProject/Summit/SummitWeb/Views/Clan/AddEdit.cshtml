@model Clan

@{
	ViewBag.Title = $"{ViewBag.Operation} Clan";
}

<h2>@ViewBag.Operation Clan</h2>
<form asp-action="AddEdit" method="post">

	<input type="hidden" asp-for="ClanId" />

	<div class="form-floating mb-3">
		<input asp-for="Name" class="form-control" id="floatingName" placeholder="Clan name here" />
		<label asp-for="Name" for="floatingName">Clan Name</label>
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-floating mb-3">
		<input asp-for="Description" class="form-control" id="floatingDesc" placeholder="Description goes here"/>
		<label asp-for="Description" for="floatingDesc">Description</label>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<button class="btn btn-primary" type="submit">Save</button>

</form>
