@model IEnumerable<Clan>
@{
	ViewBag.Title = "Clan List";
}

<div class="container py-4 bg-dark text-light min-vh-100">
    <h1 class="mb-4 text-center">Destiny 2 Clans</h1>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="AddEdit" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Add New Clan
        </a>
    </div>

    @*Checking if any clans exist*@
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info bg-secondary border-0 text-light">
            No clans found.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var clan in Model)
            {
                <div class="col">
                    <div class="card h-100 bg-secondary text-light border-0 shadow-lg">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@clan.Name</h5>
                            <p class="card-text flex-grow-1">@clan.Description</p>

                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <small class="text-muted" title="@clan.CreatedDate.ToString("yyyy-MM-dd HH:mm")">
                                    Created: @clan.CreatedDate.ToString("yyyy-MM-dd")
                                </small>

                                @{
                                    // later on validate that user is allowed to delete or edit
                                }

                                <div class="d-flex gap-2">
                                    <a class="btn btn-sm btn-outline-light" href="#">View</a>
                                    <a asp-action="AddEdit" asp-route-id="@clan.ClanId" asp-route-slug="@clan.Slug" class="btn btn-sm btn-outline-info">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@clan.ClanId" asp-route-slug="@clan.Slug" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>



